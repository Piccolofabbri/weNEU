/* pages/grade/grade.wxss */
.container{
    padding-left: 30rpx;
    padding-right: 30rpx;

}
.cj-header{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0;
}
.cj-text{
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    padding-left: 25rpx;
}
.cj-header-title{
    font-size: 20pt;
    font-weight: bold;
    line-height: 150%;
    margin-bottom: 15rpx;
    color: #222;
}
.cj-header-gpa{
    font-size: 15pt;
    font-weight: bold;
    line-height: 150%;
    margin-bottom: 15rpx;
    color: #222;
}
.cj-header-info{
    font-size: 11pt;
    line-height: 160%; 
    color: #888;
    
}

.cj-bg{
    display: block;
    width: 200rpx;
    height: 200rpx;
    padding-right: 5rpx;
    opacity: .3;
}

.cj-info-ctn{
    display: flex;
    flex-flow: column nowrap;
    align-items: stretch;
    border-radius: 3px;
    background: #fff;
    margin-bottom: 50rpx;
    padding-left: 7%;
    padding-right: 6%;
}
.cj-grade{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    padding: 25rpx 30rpx;
}
.cj-grade-logo{
    width: 100rpx;
    height: 100rpx;
}

.cj-grade-term{
    flex: 1;
    padding-left: 30rpx; 
    color: #666;
    font-size: 11pt;
    line-height: 160%;
}
.cj-grade-fst{
    display: flex;
    flex-flow: column nowrap;
}

.grade-comment{
    color: #999;
    font-size: 26rpx;
}

.cj-info-box{
    display: flex;
    flex-flow: column nowrap;
    align-items: stretch;
    padding: 15rpx;
    box-shadow: 0 10rpx 35rpx #dee1e8;
}
.cj-info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px dotted #e5e5e5;
}
.cj-info-left{
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  padding-top: 12rpx;
  padding-right: 30rpx;
  overflow: hidden;
}
.cj-info-what{
  font-size: 10pt;
  color: #777;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 10rpx
}
.cj-info-wh{
   font-size: 14pt;
  color: #000;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}
.cj-info-socre{
  flex: 0 0 auto;
  font-size: 16pt;
  color: #999;
  letter-spacing: 1px;
}
