  display: flex;
  justify-content: space-between;
  padding: 25rpx 15rpx 0 5rpx;
  font-size: 11pt;
  line-height: 150%;
  color: #8b8b8b;
}
.info-bd-left, .info-bd-right {
  display: flex;
  flex-direction: column;
}
.info-bd-left{
  flex-shrink: 0;
  padding-right: 30rpx;
}
