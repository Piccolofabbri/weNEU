/* pages/jy/jy.wxss */

page {
  width: 100%;
  height: 100%;
}

.book {
  color: #333;
  margin: 26rpx 26rpx 0 26rpx;
  background: white;
  border-radius: 4rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-content: space-between;
  flex-wrap: wrap;
}

.info {
  margin-top: 10rpx;
  justify-content: space-between;
  display: flex;
  color: #666;
  font-size: 0.8rem;
  flex-direction: column;
}

.warn {
  color: #f06292;
}

.card {
  padding: 30rpx 30rpx 50rpx 30rpx;
  display: flex;
  background-color: white;
  flex-direction: column;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  border-radius: 10px;
}

.msg{
  color: #555;
}