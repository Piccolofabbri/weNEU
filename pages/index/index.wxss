  color: #ccc;
  font-size: 8pt;
  padding: 0 16rpx;
  text-align: center;
  white-space: nowrap;
}

.main-ending-line {
  width: 100%;
  height: 0;
  border-top: 1rpx solid #e5e5e5;
}

