}

.card-item-hd {
  display: flex;
  align-items: center;
  height: 75rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 30rpx;
}

.card-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.card-item-name {
  color: #666;
  letter-spacing: 2rpx;
}

.card-item-more {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 25rpx;
