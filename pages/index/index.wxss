Page {
  background-color: #f1f1f1;
}

.swiper-container {
  width: 750rpx;
  position: relative;
  margin-top: 0rpx;
}

.swiper_box {
  width: 100%;
  height: 320rpx;
}

.swiper-item {
  background: green;
}

.slide-image {
  height: 322rpx;
  width: 95%;
}

swiper-item.image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 320rpx;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}

.page__bd, .weui-panel {
  margin-top: 20rpx;
}

.page__hd {
  padding: 20rpx 35rpx 0 35rpx;
}

.weui-footer {
  margin: 50rpx 0;
}

.weui-center {
  text-align: center;
}

.border-shadow {
  border: 1px #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

.border-shadow .weui-panel__hd {
  padding: 15rpx 30rpx 15rpx;
  font-size: 15px;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weui-panel__hd {
  color: #333;
  font-size: 15px;
  padding: 10px 15px;
}

.weui-panel__hd:after {
  left: 0px;
}

.border-shadow .weui-media-box__info {
  margin-top: 0;
  padding-bottom: 0;
}

.border-shadow .weui-media-box {
  padding: 30rpx;
}

.border-shadow .weui-media-box__hd_in-appmsg {
  height: auto;
  line-height: 0;
  font-size: 80rpx;
  font-weight: bolder;
  color: #43b0d1;
  margin-right: 0.3em;
}

.border-shadow .weui-media-box__thumb {
  height: 48px;
  width: 48px;
}

.weui-grid {
  padding: 10px 10px;
  color: #333;
  width: 20%;
  padding-bottom: 10rpx;
}

.weui-grid__icon {
  width: 81rpx;
  height: 81rpx;
}

.weui-panel:before, .weui-panel:after, .weui-grids, .weui-grid {
  border: 0;
}

.weui-media-box__desc {
  display: inherit;
  line-height: 1.8;
  color: #555;
}

button[type="primary"][plain] {
  color: #fff;
  border: 1px solid #96deda;
  background-image: linear-gradient(-45deg, #96deda 0%, #8ec5fc 100%);
}

.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #96deda;
  opacity: 0.6;
}

button[type="default"][plain] {
  color: #fff;
  border: 1px solid #fbc2eb;
  background-image: linear-gradient(-45deg, #fbc2eb 0%, #a6c1ee 100%);
}

.button-hover[type="default"][plain] {
  color: #fff;
  border-color: #fbc2eb;
  opacity: 0.6;
}

.weui-cells__tips {
  padding-left: 0px;
}

.page__hd .weui-media-box__title {
  font-size: 30rpx;
}

.page__hd .weui-media-box__title_in-text {
  margin-bottom: 0;
}

.page__hd .weui-media-box__desc {
  font-size: 19rpx;
}

.page__hd .weui-panel__hd {
  font-size: 30rpx;
}

