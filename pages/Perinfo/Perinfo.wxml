<!--pages/Perinfo/Perinfo.wxml-->
<view class="weui-panel border-shadow">
  <view class="swiper-container">
    <swiper class="swiper_box" autoplay="{{true}}" interval="3000" duration="1500">
      <block wx:for="{{banners}}">
        <swiper-item item-id="{{item.businessId}}">
          <image bindtap="tapBanner" data-id="{{item.businessId}}" src="{{item.picture}}" class="slide-image" width="750rpx" height="400rpx" />
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
      <block wx:for="{{banners}}" wx:key="unique">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>

  <view class="weui-grids" wx:if="{{iflogin==1}}">
    <navigator url="../table/table" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/schedule.svg" />
      <view class="weui-grid__label">课表</view>
    </navigator>
    <navigator url="../grade/grade" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/grade.svg" />
      <view class="weui-grid__label">成绩</view>
    </navigator>
    <navigator url="../Test/Test" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/exam.svg" />
      <view class="weui-grid__label">考表</view>
    </navigator>

    <navigator url="../zx/zx" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/zx.png" />
      <view class="weui-grid__label">自习</view>
    </navigator>
    <navigator url="../IP/ip" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/TV.png" />
      <view class="weui-grid__label">电视墙</view>
    </navigator>
    <navigator url="../Library/Library" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/loan.svg" />
      <view class="weui-grid__label">图书馆</view>
    </navigator>
    <navigator url="../jy/jy" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/loan_all.svg" />
      <view class="weui-grid__label">借阅</view>
    </navigator>
    <navigator url="../Bus/Bus" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/bus.svg" />
      <view class="weui-grid__label">校车</view>
    </navigator>
    <navigator url="../Cal/Cal" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/cal.svg" />
      <view class="weui-grid__label">校历</view>
    </navigator>
    <navigator url="../Contacts/Contacts" class="weui-grid" hover-class="weui-grid_active">
      <image class="weui-grid__icon" src="/images/icon/index/Unknown.svg" />
      <view class="weui-grid__label">通讯录</view>
    </navigator>

  </view>
  <view wx:else>
    <view class="weui-grids">
      <navigator url="../login/login" open-type="redirect" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon/index/schedule.svg" />
        <view class="weui-grid__label">课表</view>
      </navigator>
      <navigator url="../login/login" open-type="redirect" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon/index/grade.svg" />
        <view class="weui-grid__label">成绩</view>
      </navigator>
      <navigator url="../login/login" open-type="redirect" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon/index/exam.svg" />
        <view class="weui-grid__label">考表</view>
      </navigator>

      <navigator url="../login/login" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" open-type="redirect" src="/images/icon/index/zx.png" />
        <view class="weui-grid__label">自习</view>
      </navigator>
      <navigator url="../IP/ip" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon/index/TV.png" />
        <view class="weui-grid__label">电视墙</view>
      </navigator>
      <navigator url="../Library/Library" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon/index/loan.svg" />
        <view class="weui-grid__label">图书馆</view>
      </navigator>
      <navigator url="../login/login" open-type="redirect" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon/index/loan_all.svg" />
        <view class="weui-grid__label">借阅</view>
