        <view class="weui-grid__label">通讯录</view>
      </navigator>
    </view>
  </view>
</view>
<view class="weui-panel border-shadow">
  <view class="main-card-item" id="kb">
    <view class="card-item-hd">
      <image class="card-item-icon" src="/images/core/kb.png"></image>
      <text class="card-item-name">今日课表</text>
    </view>
    <view wx:if="{{iflogin==1}}">
      <view wx:if="{{index==0}}">
        <navigator url="/pages/zx/zx">
          <view class="kb-item">
            <view class="kb-item-left">
              <text class="kb-item-when">今日无课，找个地方自习吧</text>
            </view>
          </view>
        </navigator>
      </view>
      <view wx:else>
        <view class="card-item-bd" wx:for="{{Clist}}" wx:for-index="index">
          <view class="kb-item" wx:if="{{item.coursename!=' '}}">
            <view class="kb-item-left">
              <text class="kb-item-what">{{item.coursename}}</text>
              <text class="kb-item-when">{{(index+1)*2-1}}-{{(index+1)*2}}节</text>
            </view>
            <text class="kb-item-where">{{item.classroom}}</text>
          </view>
        </view>
      </view>
      <navigator url="/pages/table/table">
        <view class="kb-open">
          <text>查看本周完整课表</text>
        </view>
      </navigator>
    </view>
    <view wx:else>
      <navigator url="/pages/login/login" open-type="redirect">
        <view class="kb-open">
          <text>请绑定学号</text>
        </view>
      </navigator>
    </view>
  </view>
</view>
<view class="weui-panel border-shadow">
  <view class="main-card-item" id="kb">
    <view class="card-item-hd">
      <image class="card-item-icon" src="/images/core/kjs.png"></image>
      <text class="card-item-name">借阅信息</text>
    </view>
    <view wx:if="{{iflogin==1}}">
      <view wx:if="{{loan.length!=0}}">
        <view class="card-item-bd" wx:for="{{loan}}" wx:for-index="index">
          <view class="kb-item">
            <view class="kb-item-left">
              <text class="kb-item-what">{{item.name}}</text>
              <text class="kb-item-when">{{item.author}}</text>
            </view>
            <text class="kb-item-where">{{item.date}}</text>
          </view>
        </view>
      </view>
      <view wx:else>
        <view class="kb-item">

          <view class="kb-item-left">
            <text class="kb-item-when">暂无借阅</text>
          </view>

        </view>
      </view>
    </view>

    <view wx:else>
      <navigator url="/pages/login/login" open-type="redirect">
        <view class="kb-open">
          <text>请绑定学号</text>
        </view>
      </navigator>
    </view>
  </view>
</view>

