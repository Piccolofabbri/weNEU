.table {
  width: 100%;
  height: 200%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  
}
.weui__icon{width:28px;height:28px}
.middle{
  padding-left: 38.8%;
  padding-right: 38.8%;
}
.l{
   white-space:pre-line;
}
.th {
  font-size: 30rpx;
  color: #43b0d1;
  padding: 10rpx 0;
  border-bottom: 1px #d1e1fb solid;
  text-align: center;
  width: 100%;
}
.th-shadow {
  font-size: 30rpx;
  color: #43b0d1;
  padding: 10rpx 0;
  border-bottom: 1px #d1e1fb solid;
  text-align: center;
  width: 100%;
  box-shadow: 0 10rpx 35rpx #dee1e8;

}
.td {
  font-size: 23rpx;
  padding: 10rpx 5rpx;
  width: 90rpx;
  height: 150rpx;
  border-bottom: 1px #d1e1fb solid;
  border-right: 1px #d1e1fb solid;
  text-align: center;
}
.td-shadow{
  font-size: 23rpx;
  padding: 10rpx 5rpx;
  width: 90rpx;
  height: 150rpx;
  border-bottom: 1px #d1e1fb solid;
  border-right: 1px #d1e1fb solid;
  text-align: center;
  box-shadow: 0 10rpx 35rpx #dee1e8;

}
.lable.td {
  border: 1px #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 35rpx #dee1e8;
}
.idx {
  font-size: 30rpx;
  color: #43b0d1;
  width: 20rpx;
  padding: 10rpx;
  border-radius: 0rpx;

}

.weui-bold {
  font-size: 20rpx;
  font-weight: bold;
}

text + .weui-bold {
  display: block;
  padding-top: 20rpx;
}

.button-sp-area {
  padding: 30rpx 35rpx;
}

button[type="primary"][plain] {
  color: #fff;
  border: 1px solid #96deda;
  background-image: linear-gradient(-45deg, #96deda 0%, #8ec5fc 100%);
}

.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #96deda;
  opacity: 0.6;
}

button[type="default"][plain] {
  color: #fff;
  border: 1px solid #fbc2eb;
  background-image: linear-gradient(-45deg, #fbc2eb 0%, #a6c1ee 100%);
}

.button-hover[type="default"][plain] {
  color: #fff;
  border-color: #fbc2eb;
  opacity: 0.6;
}
.ggrid{
  display: -webkit-box;
 word-break: break-all;
 text-overflow: ellipsis;
 overflow: hidden;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:2;
}
